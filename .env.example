# Application URLs - Using Demo Applications for Testing
BASE_URL=https://demo.playwright.dev/todomvc
LOGIN_URL=https://the-internet.herokuapp.com/login
API_BASE_URL=https://reqres.in/api

# Alternative Demo Sites (uncomment to use)
# BASE_URL=https://saucedemo.com
# LOGIN_URL=https://saucedemo.com
# BASE_URL=https://demoqa.com
# LOGIN_URL=https://demoqa.com/login

# Browser Configuration
BROWSER=chromium
HEADLESS=false
TIMEOUT=30000
SLOW_MO=500

# Test Configuration
PARALLEL_WORKERS=2
RETRIES=1
TAGS=not @skip
TEST_ENV=staging

# Demo Application Credentials
# The Internet Herokuapp (https://the-internet.herokuapp.com/login)
DEMO_USERNAME=tomsmith
DEMO_PASSWORD=SuperSecretPassword!

# SauceDemo Alternative Credentials (uncomment if using saucedemo.com)
# DEMO_USERNAME=standard_user
# DEMO_PASSWORD=secret_sauce

# DemoQA Alternative Credentials (uncomment if using demoqa.com)
# DEMO_USERNAME=testuser
# DEMO_PASSWORD=Test@123

# Reporting Configuration
ALLURE_RESULTS_DIR=allure-results
CUCUMBER_REPORTS_DIR=cucumber-reports
SCREENSHOT=failure
VIDEO=failure
TRACE=retain-on-failure

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/test-execution.log

# Encryption Configuration (for sensitive test data)
ENCRYPTION_KEY=your-256-bit-secret-key-replace-this-with-actual-key
ENCRYPT_SENSITIVE_DATA=true

# CI/CD Configuration
CI=false
GITHUB_TOKEN=your-github-token-here
BUILD_NUMBER=local

# Test Management Integration
# Jira Configuration
JIRA_BASE_URL=https://your-company.atlassian.net
JIRA_USERNAME=your-jira-email@company.com
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT_KEY=TEST

# TestRail Configuration
TESTRAIL_URL=https://your-company.testrail.io
TESTRAIL_USERNAME=your-testrail-email@company.com
TESTRAIL_API_KEY=your-testrail-api-key
TESTRAIL_PROJECT_ID=1

# Azure DevOps Configuration
AZURE_DEVOPS_ORG=https://dev.azure.com/your-organization
AZURE_DEVOPS_PROJECT=your-project-name
AZURE_DEVOPS_PAT=your-personal-access-token

# Database Configuration (if needed for test data)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=testdb
DB_USERNAME=testuser
DB_PASSWORD=testpass

# Email Configuration (for test notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Slack Configuration (for test notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
SLACK_CHANNEL=#test-results

# Performance Testing Configuration
PERFORMANCE_THRESHOLD_MS=3000
MEMORY_THRESHOLD_MB=512
CPU_THRESHOLD_PERCENT=80

# Mobile Testing Configuration
MOBILE_DEVICE=iPhone 12
MOBILE_VIEWPORT_WIDTH=390
MOBILE_VIEWPORT_HEIGHT=844

# Docker Configuration
DOCKER_SELENIUM_HUB=http://localhost:4444/wd/hub
DOCKER_NETWORK=test-network
